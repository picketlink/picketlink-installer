<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>PicketLinkInstaller</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<files>
		<file>
			<filtered>true</filtered>
			<source>installer.properties</source>
			<destName>installer.properties</destName>
			<outputDirectory>${installer.root.dir}</outputDirectory>
		</file>
		<file>
			<source>build.xml</source>
			<destName>build.xml</destName>
			<outputDirectory>${installer.root.dir}/</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>config/</directory>
			<includes>
				<include>xslt/eap/*.*</include>
			</includes>
			<outputDirectory>${installer.root.dir}/config</outputDirectory>
		</fileSet>
    <fileSet>
      <directory>config/module</directory>
      <outputDirectory>${installer.root.dir}/config/module</outputDirectory>
    </fileSet>
  </fileSets>
	<dependencySets>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-common</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-config</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-api</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-impl</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-idm-api</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-idm-impl</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-idm-simple-schema</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink:picketlink-federation</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
    </dependencySet>
		<dependencySet>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>org.picketlink.distribution:picketlink-jbas7</include>
			</includes>
			<outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
		</dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.picketlink.quickstarts:picketlink-quickstarts</include>
      </includes>
      <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
      <outputFileNameMapping>picketlink-quickstarts-${picketlink.federation.quickstarts.version}-webapps-jboss-as7.zip</outputFileNameMapping>
    </dependencySet>
	</dependencySets>

</assembly>